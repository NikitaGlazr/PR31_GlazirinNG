<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Indigo"
    tools:context=".MainActivity">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-155dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="-1dp">

            <ImageButton
                android:id="@+id/cameraButton"
                android:layout_width="83dp"
                android:layout_height="66dp"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/cam"
                tools:ignore="SpeakableTextPresentCheck" />


            <ImageButton
                android:id="@+id/googleButton"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/www"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/phoneButton"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/phone"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/mapsButton"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/location"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/youtibewwwButton"
                android:layout_width="71dp"
                android:layout_height="66dp"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/youtube"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/orange"
                android:text="Show notification"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/IDLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tId"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:paddingLeft="12dp"
                    android:text="Код"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etID"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/white"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/animalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:paddingLeft="15dp"
                    android:text="Телефон"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etTelephone"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/white"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Модель"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etModel"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sizeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Размер"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etSize"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/white"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/heightLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Цена"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/white"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsLayout1"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnInsert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:backgroundTint="@color/Orange"
                    android:text="Ввод" />

                <Button
                    android:id="@+id/btnRead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/Orange"
                    android:text="Просмотр" />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/Orange"
                    android:text="Очистка" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsLayout2"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:backgroundTint="@color/Orange"
                    android:text="Обновление" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/Orange"
                    android:text="Удаление" />

                <Button
                    android:id="@+id/btnSort"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/Orange"
                    android:text="Сортировка" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/radioGroupLayout"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/rgSort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbTelephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Сортировка по телефонам"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/rbModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Сортировка по моделям"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/rbSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Сортировка по размеру"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/rbPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Сортировка по цене"
                        android:textColor="@color/white" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ViewFlipper>

</androidx.constraintlayout.widget.ConstraintLayout>